@model AplikacjaWebowa.ViewModels.NewUserViewModel
@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Zaloguj się</h2>
    @using (Html.BeginForm("Save", "Home"))
     {
         <div class="form-group">
             <label>Email</label>
             @Html.TextBoxFor(r => r.user.Email, "Email", new {@class = "form-control"})
         </div>
         <div class="form-group">
             <label>Hasło</label>
             @Html.TextBoxFor(r => r.user.Password, "Password", new {@class = "form-control"})

         </div>
       
         <button type="submit" , class="btn btn-primary">Rejestruj</button>
     }

}