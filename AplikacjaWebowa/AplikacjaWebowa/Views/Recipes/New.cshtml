@model AplikacjaWebowa.ViewModels.NewRecipeViewModel
@{
    ViewBag.Title = "New";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Model.Title</h2>
<br />

@using (Html.BeginForm("Save", "Recipes"))
{
    <div class="form-group">
        <label>Tytuł Dania</label>
        @Html.TextBoxFor(r => r.recipe.Title, "Tytuł dania",new { @class = "form-control" })

    </div>
    <div class="form-group">
        <label>Opis przygotowania dania</label>
        @Html.TextBoxFor(r => r.recipe.Description, "Opis przygotowania dania", new { @class = "form-control" })

    </div>
    <div class="checkbox">
        <label>

        </label>
    </div>
    <div class="form-group">
        @Html.LabelFor(r => r.recipe.RecipeTypeId)
        @Html.DropDownListFor(r=>r.recipe.RecipeTypeId, new SelectList(@Model.types, "Id", "Name"), "Wybierz rodzaj", new { @class = "form-control" })

    </div>

    @Html.HiddenFor(r=>r.recipe.ID)
    <button type="submit", class="btn btn-primary">Dodaj</button>
}